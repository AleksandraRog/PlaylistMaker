<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/TopFrame"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_back"
            style="@style/ButtonTop.Back"
            android:visibility="visible" />

        <TextView
            style="@style/TopFrame.TextVeiw"
            android:text="@string/button_search"
            app:layout_constraintLeft_toRightOf="@+id/button_back" />

        <Button
            style="@style/ButtonTop"
            app:icon="@drawable/vector_filterlist"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/BottomFrame"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp">

            <EditText
                android:id="@+id/inputEditText"
                style="@style/SearchFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/search_field_s"
                android:drawableLeft="@drawable/vector_search"
                android:drawablePadding="12dp"
                android:fontFamily="@font/ys_display_regular"
                android:hint="@string/button_search"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:paddingLeft="12dp"
                android:textColor="?attr/colorOnPrimary"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/base_text_size"
                app:drawableSize="16dp" />

            <ImageView
                style="@style/SearchFrame"
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/end_margin_setting"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_vector_clear"
                app:drawableSize="16dp"
                android:visibility="gone" />
        </FrameLayout>
        <LinearLayout
            style="@style/BottomFrame.LinearLayout"
            android:layout_width="match_parent">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
