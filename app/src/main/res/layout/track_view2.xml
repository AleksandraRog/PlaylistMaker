<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TrackItemContainerStyle2"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trackImage"
        tools:src="@drawable/vector_placeholder"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <LinearLayout
        style="@style/TrackItemInnerContainerStyle2"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/trackName"
            style="@style/TrackNameTitleStyle2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="Here Comes The Sun (New Remastered). Here Comes The Sun (New Remastered)." />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/artistName"
                style="@style/MusicalArtistStyle2"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                tools:text="The Beatles.The Beatles.The Beatles.The Beatles.The Beatles.The Beatles.The Beatles.The Beatles."/>

            <TextView
                android:id="@+id/trackTime"
                style="@style/TrackTimeStyle2"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="4:01" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/TrackArrowStyle2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/vector_arrow" />
</LinearLayout>