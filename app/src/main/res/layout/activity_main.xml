<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_toolbar_frame"
        style="@style/TopFrame"
        app:navigationIcon="@null"
        app:title="@string/app_name" />

    <Button
        android:id="@+id/search_button"
        style="@style/ButtonGreat"
        android:text="@string/button_search"
        app:icon="@drawable/vector_search" />

    <Button
        android:id="@+id/library_button"
        style="@style/ButtonGreat"
        android:text="@string/button_library"
        app:icon="@drawable/vector_library" />

    <Button
        android:id="@+id/setting_button"
        style="@style/ButtonGreat"
        android:layout_marginBottom="28dp"
        android:text="@string/button_setting"
        app:icon="@drawable/vector_setting" />
</LinearLayout>
