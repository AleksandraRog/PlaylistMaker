<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/TopFrame"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_back"
            style="@style/ButtonTop.Back"
            android:visibility="visible" />

        <TextView
            style="@style/TopFrame.TextVeiw"
            android:text="@string/button_setting"
            app:layout_constraintLeft_toRightOf="@+id/button_back" />

        <Button
            style="@style/ButtonTop"
            app:icon="@drawable/vector_filterlist"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        style="@style/BottomFrame"
        android:stretchColumns="0"
        android:textSize="@dimen/base_text_size">

        <!-- Первая строка -->
        <TableRow style="@style/List">

            <TextView
                style="@style/TextViewSetting"
                android:text="@string/dark_theme" />

            <Switch
                android:id="@+id/switch_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:thumbTint="@color/thumb_color"
                android:trackTint="@color/track_color"></Switch>

        </TableRow>

        <!-- Вторая строка -->
        <TableRow style="@style/List">

            <TextView
                style="@style/TextViewSetting"
                android:text="@string/share_app" />

            <ImageView
                android:id="@+id/button_share"
                style="@style/ImageViewSetting"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector_share" />

        </TableRow>

        <!-- Третья строка -->
        <TableRow style="@style/List">

            <TextView
                style="@style/TextViewSetting"
                android:text="@string/send_support" />

            <ImageView
                android:id="@+id/button_support"
                style="@style/ImageViewSetting"
                android:src="@drawable/vector_support" />

        </TableRow>

        <!--  Четвертая строка -->
        <TableRow style="@style/List">

            <TextView
                style="@style/TextViewSetting"
                android:text="@string/arrow_forward" />

            <ImageView
                android:id="@+id/button_arrow"
                style="@style/ImageViewSetting"
                android:src="@drawable/vector_arrow" />
        </TableRow>

        <!--  Пятая строка -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="476">
        </TableRow>
    </TableLayout>
</LinearLayout>
