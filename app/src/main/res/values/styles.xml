<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonGreat" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/start_margin</item>
        <item name="android:layout_marginBottom">@dimen/start_margin</item>
        <item name="android:textSize">@dimen/primari_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">end</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">61dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageViewSetting">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/YP_text_grey</item>
    </style>

    <style name="TextViewSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
    </style>

    <style name="TopFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">@dimen/top_padding</item>
        <item name="navigationIcon">@drawable/vector_back</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="contentInsetStartWithNavigation">@dimen/top_padding</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/primari_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="titleMarginTop">2dp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SearchFrame">
        <item name="android:backgroundTint">@color/YP_light_gray</item>
        <item name="drawableTint">@color/YP_text_grey</item>
        <item name="android:textColorHint">@color/YP_text_grey</item>
    </style>

    <style name="SubtitleTrackViewHolder">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">@color/YP_text_grey</item>
        <item name="android:textColor">@color/YP_text_grey</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

</resources>