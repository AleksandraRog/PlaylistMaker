<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonGreat">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/start_margin</item>
        <item name="android:layout_marginBottom">@dimen/start_margin</item>
        <item name="android:textSize">@dimen/primari_text_size</item>
        <item name="android:textColor">@color/text_great_screen</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/button_great_screen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="ButtonTop">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:visibility">invisible</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">61</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="ImageViewSetting">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="TextViewSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TopFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="BottomFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">93</item>
        <item name="android:paddingTop">@dimen/top_padding</item>
        <item name="android:paddingBottom">@dimen/bottom_padding</item>
    </style>
</resources>