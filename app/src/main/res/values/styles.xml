<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">61dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageViewSetting">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">?attr/colorQuaternaryVariant</item>
    </style>

    <style name="TextViewSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
    </style>
    <style name="CustomToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:layout_marginBottom">@dimen/top_padding</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="contentInsetStartWithNavigation">@dimen/top_padding</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="TopFrame" parent ="CustomToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIcon">@drawable/vector_back</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/primari_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="titleMarginTop">2dp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SearchFrame">
        <item name="android:backgroundTint">?attr/colorQuaternary</item>
        <item name="drawableTint">?attr/colorOnQuaternary</item>
        <item name="android:textColorHint">?attr/colorOnQuaternary</item>
    </style>

    <style name="SubtitleTrackViewHolder">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">?attr/colorQuaternaryVariant</item>
        <item name="android:textColor">?attr/colorQuaternaryVariant</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="TitleParamTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginHorizontal">@dimen/start_margin</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/YP_text_grey</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="ParamTrack" parent="TitleParamTrack">
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintWidth_max">wrap</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="layout_constraintStart_toStartOf">@+id/center_guideline</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="PlayerSmallButton">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_marginHorizontal">@dimen/top_padding</item>
        <item name="android:layout_marginVertical">52dp</item>
        <item name="layout_constraintTop_toBottomOf">@+id/artistName</item>
        <item name="cornerRadius">69dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">14dp</item>
        <item name="iconTint">@color/YP_white</item>
        <item name="iconSize">23dp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/library_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="EditTextNewPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/fab_margin</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:background">@drawable/selector_backgroun_text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TextViewNewPlaylist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/top_padding</item>
        <item name="android:layout_marginTop">-12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/YP_blue</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:padding">4dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="NewPlaylistButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/new_playlist</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">11dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlaylistStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/YP_light_gray</item>
        <item name="android:background">@color/YP_light_gray</item>

    </style>

    <style name="PlaylistStyle.Title" parent="PlaylistStyle">
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:gravity">start|center</item>
    </style>

    <style name="PlaylistStyle.Details" parent="PlaylistStyle.Title">
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PlaylistStyle.Details.Variant" parent="PlaylistStyle.Details">
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/YP_white</item>
        <item name="colorOnSurface">@color/YP_black</item>
        <item name="colorPrimary">@color/YP_blue</item>
    </style>
</resources>
